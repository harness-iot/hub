{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
