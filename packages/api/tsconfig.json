{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true, // https://github.com/nestjs/graphql/issues/1621#issuecomment-878199238
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "..",
    "incremental": true,
    "esModuleInterop": true,
    "paths": {
      "@harriot-hub/common": ["./common"],
      "@harriot-types/*": ["./api/src/types/*"],
      "@harriot-utils/*": ["./api/src/utils/*"],
      "@harriot-config/*": ["./api/src/config/*"],
      "@harriot-wifi/*": ["./api/src/wifi/*"],
      "@harriot-network/*": ["./api/src/network/*"],
      "@harriot-mqtt/*": ["./api/src/mqtt/*"],
      "@harriot-db/*": ["./api/src/database/*"],
      "@harriot-modules/*": ["./api/src/modules/*"],
      "@harriot-routes/*": ["./api/src/routes/*"],
      "@harriot-controller/*": ["./api/src/controller/*"]
    }
  }
}
