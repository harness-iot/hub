{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true, // https://github.com/nestjs/graphql/issues/1621#issuecomment-878199238
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "paths": {
      "@harriot-types/*": ["./src/types/*"],
      "@harriot-utils/*": ["./src/utils/*"],
      "@harriot-config/*": ["./src/config/*"],
      "@harriot-wifi/*": ["./src/wifi/*"],
      "@harriot-network/*": ["./src/network/*"],
      "@harriot-mqtt/*": ["./src/mqtt/*"],
      "@harriot-db/*": ["./src/database/*"],
      "@harriot-modules/*": ["./src/modules/*"],
      "@harriot-routes/*": ["./src/routes/*"],
      "@harriot-controller/*": ["./src/controller/*"]
    }
  }
}
