{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@harriot-hub/common": ["../common"],
      "@harriot-controller/config/*": ["./src/config/*"],
      "@harriot-controller/client/*": ["./src/client/*"],
      "@harriot-controller/database/*": ["./src/database/*"],
      "@harriot-controller/node/*": ["./src/node/*"],
      "@harriot-controller/conditional/*": ["./src/conditional/*"],
    }
  }
}
