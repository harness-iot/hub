{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "..",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@harriot-hub/common": ["./common"],
      "@harriot-controller/config/*": ["./controller/src/config/*"],
      "@harriot-controller/client/*": ["./controller/src/client/*"],
      "@harriot-controller/database/*": ["./controller/src/database/*"],
      "@harriot-controller/node/*": ["./controller/src/node/*"],
      "@harriot-controller/conditional/*": ["./controller/src/conditional/*"],
    }
  }
}
